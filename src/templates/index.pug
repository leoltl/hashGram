extends layout
include mixins/_post

block styles
  link(rel="stylesheet", href="stylesheets/pages/main-feed.css")

block main
  main.index
    each post in posts
      +_post(post, authUser)

block scripts
  script.
    var _authUserHandle = "#{authUser && authUser.handle}"
  script(src="scripts/newComment.js")
  script(src="scripts/likePost.js")